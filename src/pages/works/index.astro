---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import CardWork from '../../components/CardWork.astro';

const works = (await getCollection('works')).sort(
	(a, b) => a.data.releaseDate.valueOf() - b.data.releaseDate.valueOf()
);
---

<BaseLayout>
  <div class="wrapper">
	<main class="flow">
      <h1 data-theme='dark'>Creative Works</h1>
      <p data-theme='dark'>Here are my latest interactive digital fictions and current projects.</p>
      <ul role="list" class="flow">
        {
          works.map((work) => (
            <li>
              <CardWork work={work} />
            </li>
          ))
        }
      </ul>
      <aside>
        <p data-theme='dark'>These days I build all my creative works using <a href="https://www.w3.org/standards/">open standard web technologies</a>, such as HTML, CSS & JavaScript. I used to create works in <a href="https://en.wikipedia.org/wiki/Adobe_Flash">Flash</a> but eventually that technology was discontinued on the web. You can see video screencasts of my Flash works in my <a href="/archive">Archive.</a></p>
      </aside>
    </main>
  </div>
</BaseLayout>

